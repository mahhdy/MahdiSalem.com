{
  "name": "mahdisalem-com",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "npm run content:all && astro build && npx pagefind --site dist",
    "preview": "astro preview",
    "astro": "astro",
    "content:all": "node scripts/process-content.mjs --all",
    "content:zip": "node scripts/process-content.mjs --zip",
    "content:book": "node scripts/process-content.mjs --book",
    "content:file": "node scripts/process-content.mjs --file",
    "content:watch": "node scripts/watch-content.mjs",
    "content:watch:no-ai": "node scripts/watch-content.mjs --no-ai",
    "test:mermaid": "node scripts/extract-mermaid-tests.mjs",
    "dev:watch": "npm-run-all --parallel dev content:watch",
    "admin:server": "cd admin/server && npx tsx --watch src/index.ts",
    "admin:client": "cd admin/client && npx vite --port 3333",
    "admin:dev": "npm-run-all --parallel dev admin:server admin:client"
  },
  "overrides": {
    "minimatch": "^10.2.1",
    "glob": "^10.3.10"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.17.1",
    "astro-icon": "^1.1.5",
    "cheerio": "^1.2.0",
    "pdfjs-dist": "^5.4.624",
    "rimraf": "^6.1.3",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "unist-util-visit": "^5.1.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.10.0",
    "adm-zip": "^0.5.16",
    "chokidar": "^3.6.0",
    "globby": "^14.0.0",
    "gray-matter": "^4.0.3",
    "mammoth": "^1.6.0",
    "npm-run-all": "^1.1.3",
    "openai": "^4.20.0",
    "pagefind": "^1.4.0",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.33.0",
    "unzipper": "^0.10.14"
  }
}