---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getLangFromUrl, getDir, t } from "../i18n";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  noIndex?: boolean;
}

const lang = getLangFromUrl(Astro.url);
const dir = getDir(lang);
const {
  title = t("site.title", lang),
  description = t("site.description", lang),
  ogImage = "/images/og-default.jpg",
  noIndex = false,
} = Astro.props;

const fullTitle =
  title === t("site.title", lang)
    ? title
    : `${title} | ${t("site.title", lang)}`;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang={lang} dir={dir} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@100..900&family=Inter:wght@300..800&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:locale" content={lang === "fa" ? "fa_IR" : "en_US"} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />

    <!-- RSS -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={t("site.title", lang)}
      href={`/rss-${lang}.xml`}
    />

    <!-- Theme initialization (prevent flash) -->
    <script is:inline>
      (function () {
        const theme = localStorage.getItem("theme");
        if (
          theme === "dark" ||
          (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header lang={lang} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer lang={lang} />

    <!-- Mermaid.js - Diagram Rendering -->
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.min.js"
    ></script>
    <script is:inline>
      // Initialize Mermaid with full RTL / Farsi / Gantt support
      if (typeof mermaid !== "undefined") {
        const isDark = document.documentElement.classList.contains("dark");
        mermaid.initialize({
          startOnLoad: false, // We call mermaid.run() manually below
          theme: isDark ? "dark" : "default",
          fontFamily: '"Vazirmatn", "Vazir", "Tahoma", sans-serif',
          flowchart: {
            useMaxWidth: false,
            htmlLabels: true,
            curve: "basis",
          },
          gantt: {
            useMaxWidth: true,
            titleTopMargin: 25,
            barHeight: 30,
            barGap: 6,
            topPadding: 60,
            rightPadding: 120,
            leftPadding: 150,
            gridLineStartPadding: 35,
            fontSize: 13,
            sectionFontSize: 14,
            numberSectionStyles: 4,
            axisFormat: "%Y-%m",
          },
          mindmap: { useMaxWidth: true },
          pie: { useMaxWidth: true },
          timeline: { useMaxWidth: true },
          gitGraph: { useMaxWidth: true },
          stateDiagram: { useMaxWidth: true },
          themeVariables: {
            fontFamily: '"Vazirmatn", "Vazir", "Tahoma", sans-serif',
          },
        });
      }

      function runMermaid() {
        if (typeof mermaid !== "undefined") {
          // Save original code before Mermaid touches it
          document
            .querySelectorAll(".mermaid:not([data-original-code])")
            .forEach((el) => {
              el.setAttribute("data-original-code", el.textContent);
            });
          mermaid
            .run({ querySelector: ".mermaid:not([data-processed])" })
            .catch(console.error);
        }
      }

      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", runMermaid);
      } else {
        runMermaid();
      }

      // Re-render on theme change
      const themeObserver = new MutationObserver(function (mutations) {
        mutations.forEach(function (mutation) {
          if (
            mutation.attributeName === "class" &&
            typeof mermaid !== "undefined"
          ) {
            const isDark = document.documentElement.classList.contains("dark");
            mermaid.initialize({
              theme: isDark ? "dark" : "default",
              startOnLoad: false,
            });

            // Restore original text so Mermaid can re-render it
            document.querySelectorAll(".mermaid").forEach((el) => {
              const code = el.getAttribute("data-original-code");
              if (code) {
                el.innerHTML = code;
                el.removeAttribute("data-processed");
              }
            });

            runMermaid();
          }
        });
      });
      themeObserver.observe(document.documentElement, { attributes: true });
    </script>

    <script>
      import "../scripts/mermaid-interact";
    </script>
  </body>
</html>
