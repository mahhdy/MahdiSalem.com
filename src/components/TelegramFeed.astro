---
/**
 * TelegramFeed Component - Merged version
 * Richness from "TelegramFeed- Rich" with the Look & Feel of the "Original"
 */
import { t } from "../i18n";
import type { Locale } from "../i18n";

interface Props {
  lang: Locale;
  limit?: number;
}

const { lang, limit = 5 } = Astro.props;

const workerUrl =
  import.meta.env.PUBLIC_TELEGRAM_WORKER_URL ||
  "https://telegram-feed.mahhdy.workers.dev";
const channelUsername = import.meta.env.PUBLIC_TELEGRAM_CHANNEL || "@mahhdy57";
---

<div
  class="telegram-feed"
  data-worker-url={workerUrl}
  data-limit={limit}
  data-lang={lang}
  dir={lang === "fa" ? "rtl" : "ltr"}
>
  <div class="feed-header flex items-center justify-between mb-8">
    <h2 class="text-2xl font-bold flex items-center gap-3">
      <svg
        class="w-7 h-7 text-[#0088cc]"
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"
        ></path>
      </svg>
      {t("telegram.latest_posts", lang)}
    </h2>
  </div>

  <!-- Loading State -->
  <div class="feed-loading">
    <div class="flex items-center justify-center py-20">
      <svg
        class="animate-spin h-8 w-8 text-[#0088cc]"
        fill="none"
        viewBox="0 0 24 24"
      >
        <circle
          class="opacity-25"
          cx="12"
          cy="12"
          r="10"
          stroke="currentColor"
          stroke-width="4"></circle>
        <path
          class="opacity-75"
          fill="currentColor"
          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
        ></path>
      </svg>
      <p class="mr-3 text-text-muted dark:text-text-dark-muted">
        {t("telegram.loading", lang)}
      </p>
    </div>
  </div>

  <!-- Error State -->
  <div class="feed-error hidden">
    <div class="flex flex-col items-center justify-center py-20 text-center">
      <p class="text-red-500 mb-4">{t("telegram.error", lang)}</p>
      <button class="retry-btn text-sm text-[#0088cc] hover:underline"
        >Retry</button
      >
    </div>
  </div>

  <!-- Posts Container -->
  <div class="feed-posts space-y-8">
    <!-- Posts will be injected here -->
  </div>

  <!-- View Channel Button -->
  {
    channelUsername && (
      <div class="text-center mt-12">
        <a
          href={`https://t.me/${channelUsername.replace("@", "")}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-8 py-3.5 rounded-xl bg-[#0088cc] text-white hover:bg-[#0077b3] transition-all font-semibold shadow-lg shadow-[#0088cc]/20"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z" />
          </svg>
          {t("telegram.view_channel", lang)}
        </a>
      </div>
    )
  }
</div>

<script>
  // ============================================================
  // TYPES
  // ============================================================

  interface MediaItem {
    type: string;
    url?: string;
    thumbnail?: string;
    title?: string;
    description?: string;
    duration?: string;
    fileName?: string;
    fileSize?: string;
    mimeType?: string;
  }

  interface ReplyToPost {
    id: string;
    text: string;
    hasMedia?: boolean;
    mediaType?: string;
    link: string;
  }

  interface ThreadPart {
    current: number;
    total: number | null;
  }

  interface Poll {
    question: string;
    options: { text: string; voterCount: number }[];
    totalVoters: number;
  }

  interface ForwardedFrom {
    name: string;
    url?: string;
  }

  interface TelegramPost {
    id: string;
    text: string;
    textHtml?: string;
    date: number;
    views: number;
    link: string;
    media?: MediaItem[];
    hasMedia?: boolean;
    isAlbum?: boolean;
    albumCount?: number;
    forwardedFrom?: ForwardedFrom;
    replyTo?: { id: string; url: string; author?: string; text?: string };
    replyToPost?: ReplyToPost;
    poll?: Poll;
    threadPart?: ThreadPart;
    isContinuation?: boolean;
    reactions?: { emoji: string; count: number }[];
    edited?: boolean;
  }

  // ============================================================
  // HELPERS
  // ============================================================

  function escapeHtml(str: string): string {
    return (str || "")
      .replace(/&/g, "&amp;")
      .replace(/</g, "&lt;")
      .replace(/>/g, "&gt;")
      .replace(/"/g, "&quot;")
      .replace(/'/g, "&#039;");
  }

  function formatTime(timestamp: number, lang: "fa" | "en"): string {
    return new Intl.DateTimeFormat(lang === "fa" ? "fa-IR" : "en-US", {
      year: "numeric",
      month: "short",
      day: "numeric",
      hour: "2-digit",
      minute: "2-digit",
    }).format(new Date(timestamp * 1000));
  }

  // ============================================================
  // CARD BUILDER
  // ============================================================

  function createPostCard(post: TelegramPost, lang: "fa" | "en"): HTMLElement {
    const card = document.createElement("article");
    card.className =
      "post-card p-6 rounded-2xl bg-surface dark:bg-surface-dark border border-border dark:border-border-dark shadow-sm hover:shadow-md transition-all";
    card.setAttribute("dir", lang === "fa" ? "rtl" : "ltr");

    let html = "";

    // 1. TOP META - Date and Views
    const date = formatTime(post.date, lang);
    const views = post.views.toLocaleString(lang === "fa" ? "fa-IR" : "en-US");

    html += `
      <div class="post-meta text-xs text-text-muted dark:text-text-dark-muted mb-4 flex items-center justify-between">
        <div class="flex items-center gap-4">
          <span class="flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            ${date}
          </span>
          <span class="flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            ${views}
          </span>
        </div>
        <span class="opacity-50">#${post.id}</span>
      </div>
    `;

    // 2. BADGES row
    const badges = [];
    if (post.threadPart)
      badges.push({
        color: "thread",
        text: `ðŸ“‘ ${post.threadPart.current}/${post.threadPart.total || ""}`,
      });
    if (post.forwardedFrom)
      badges.push({
        color: "fwd",
        text: `â†ªï¸ ${lang === "fa" ? "ÙÙˆØ±ÙˆØ§Ø±Ø¯" : "Fwd"}: ${post.forwardedFrom.name}`,
      });
    if (post.edited)
      badges.push({
        color: "edit",
        text: `âœï¸ ${lang === "fa" ? "ÙˆÛŒØ±Ø§ÛŒØ´" : "Edited"}`,
      });

    if (badges.length > 0) {
      html += `<div class="flex flex-wrap gap-2 mb-4">
        ${badges.map((b) => `<span class="badge-${b.color} px-2 py-0.5 rounded-md text-[10px] font-bold uppercase tracking-wider">${b.text}</span>`).join("")}
      </div>`;
    }

    // 3. REPLY Box (Grey Area)
    if (post.replyToPost || post.replyTo) {
      const author = post.replyTo?.author || "Prev Post";
      const text = post.replyToPost?.text || post.replyTo?.text || "";
      html += `
        <div class="reply-box bg-surface-dim dark:bg-surface-dark-dim border-r-4 border-[#0088cc] p-3 rounded-lg mb-4 text-sm">
          <div class="text-[#0088cc] font-bold mb-1">${author}</div>
          <p class="text-text-muted dark:text-text-dark-muted line-clamp-1">${escapeHtml(text)}</p>
        </div>
      `;
    }

    // 4. MAIN MEDIA
    if (post.media && post.media.length > 0) {
      html += `<div class="post-media mb-5 space-y-3">`;
      post.media.forEach((m) => {
        if (m.type === "photo") {
          html += `<a href="${post.link}" target="_blank" class="block rounded-xl overflow-hidden shadow-sm">
                    <img src="${m.url || m.thumbnail}" class="w-full object-cover max-h-[500px]" loading="lazy" />
                  </a>`;
        } else if (m.type === "video") {
          html += `<div class="rounded-xl overflow-hidden bg-black aspect-video">
                    <video controls class="w-full h-full" poster="${m.thumbnail || ""}">
                      <source src="${m.url}" type="video/mp4" />
                    </video>
                  </div>`;
        } else if (m.type === "document") {
          html += `<a href="${post.link}" target="_blank" class="flex items-center gap-3 p-4 bg-surface-dim dark:bg-surface-dark-dim rounded-xl border border-border/50">
                    <div class="w-12 h-12 bg-[#0088cc]/10 text-[#0088cc] flex items-center justify-center rounded-lg">
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/></svg>
                    </div>
                    <div class="flex-1 min-w-0">
                      <div class="font-bold truncate">${m.fileName || "File"}</div>
                      <div class="text-xs text-text-muted">${m.fileSize || ""}</div>
                    </div>
                  </a>`;
        } else if (m.type === "linkPreview") {
          html += `<a href="${m.url}" target="_blank" class="flex gap-4 p-4 bg-surface-dim dark:bg-surface-dark-dim rounded-xl border border-border/50">
                    ${m.thumbnail ? `<img src="${m.thumbnail}" class="w-20 h-20 object-cover rounded-lg flex-shrink-0" />` : ""}
                    <div class="flex-1 min-w-0">
                      <div class="text-[#0088cc] font-bold truncate mb-1">${m.title || ""}</div>
                      <p class="text-sm text-text-muted line-clamp-2">${m.description || ""}</p>
                    </div>
                  </a>`;
        }
      });
      html += `</div>`;
    }

    // 5. POLL
    if (post.poll) {
      html += `
        <div class="poll-box bg-surface-dim dark:bg-surface-dark-dim p-5 rounded-2xl border border-border/50 mb-5">
          <div class="flex items-center gap-2 text-[#0088cc] mb-3 font-bold">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/></svg>
            ${post.poll.question}
          </div>
          <div class="space-y-2">
            ${post.poll.options
              .map((o) => {
                const per = Math.round(
                  (o.voterCount / (post.poll?.totalVoters || 1)) * 100,
                );
                return `<div class="relative h-10 bg-surface dark:bg-surface-dark rounded-lg flex items-center px-4 overflow-hidden border border-border/20">
                <div class="absolute inset-y-0 left-0 bg-[#0088cc]/10" style="width: ${per}%"></div>
                <span class="relative flex-1 text-sm font-medium z-1">${o.text}</span>
                <span class="relative text-sm font-bold text-[#0088cc] z-1">${per}%</span>
              </div>`;
              })
              .join("")}
          </div>
          <div class="mt-4 text-center text-xs text-text-muted">
            ${post.poll.totalVoters} ${lang === "fa" ? "Ø±Ø§ÛŒ" : "votes"}
          </div>
        </div>
      `;
    }

    // 6. MAIN TEXT (White Area)
    if (post.textHtml || post.text) {
      // Prioritize HTML. We use whitespace-pre-wrap to respect \n from the worker.
      let content = post.textHtml || escapeHtml(post.text);
      html += `<div class="post-content text-base md:text-lg leading-relaxed mb-6 whitespace-pre-wrap">${content}</div>`;
    }

    // 7. REACTIONS
    if (post.reactions && post.reactions.length > 0) {
      html += `<div class="flex flex-wrap gap-2 mb-6">
        ${post.reactions
          .slice(0, 8)
          .map(
            (r) =>
              `<span class="bg-surface-dim dark:bg-surface-dark-dim px-3 py-1 rounded-full text-sm border border-border/30">${r.emoji} ${r.count}</span>`,
          )
          .join("")}
      </div>`;
    }

    // 8. FOOTER - View on Telegram
    html += `
      <div class="pt-5 border-t border-border/50 flex items-center justify-between">
        <a href="${post.link}" target="_blank" rel="noopener noreferrer" class="text-[#0088cc] font-bold flex items-center gap-1.5 hover:underline decoration-2 underline-offset-4">
          ${lang === "fa" ? "Ù…Ø´Ø§Ù‡Ø¯Ù‡ Ø¯Ø± ØªÙ„Ú¯Ø±Ø§Ù…" : "View on Telegram"}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
      </div>
    `;

    card.innerHTML = html;
    return card;
  }

  // ============================================================
  // INITIALIZATION
  // ============================================================

  document.querySelectorAll(".telegram-feed").forEach(async (container) => {
    const workerUrl = container.getAttribute("data-worker-url");
    const limit = parseInt(container.getAttribute("data-limit") || "5");
    const lang = container.getAttribute("data-lang") as "fa" | "en";

    const loadingEl = container.querySelector(".feed-loading") as HTMLElement;
    const errorEl = container.querySelector(".feed-error") as HTMLElement;
    const postsEl = container.querySelector(".feed-posts") as HTMLElement;
    const retryBtn = container.querySelector(".retry-btn");

    async function loadFeed() {
      if (!workerUrl) return;
      loadingEl.classList.remove("hidden");
      errorEl.classList.add("hidden");
      postsEl.innerHTML = "";

      try {
        const response = await fetch(workerUrl);
        if (!response.ok) throw new Error();
        const posts: TelegramPost[] = await response.json();

        loadingEl.classList.add("hidden");
        if (!posts || posts.length === 0) throw new Error();

        posts.slice(0, limit).forEach((post) => {
          postsEl.appendChild(createPostCard(post, lang));
        });
      } catch (err) {
        loadingEl.classList.add("hidden");
        errorEl.classList.remove("hidden");
      }
    }

    retryBtn?.addEventListener("click", loadFeed);
    loadFeed();
  });
</script>

<style>
  .telegram-feed {
    max-width: 800px;
    margin: 0 auto;
  }

  .post-content {
    word-break: break-word;
    white-space: pre-wrap;
  }

  .post-content :global(a) {
    color: #0088cc;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .post-content :global(blockquote) {
    border-inline-start: 4px solid #0088cc;
    padding-inline-start: 1rem;
    margin: 1rem 0;
    color: var(--color-text-muted);
    font-style: italic;
    background: var(--color-surface-dim);
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
  }

  .post-content :global(.hashtag),
  .post-content :global(.mention) {
    color: #0088cc;
    text-decoration: none;
    font-weight: 500;
  }

  .post-content :global(code) {
    background-color: var(--color-surface-dim);
    padding: 0.15rem 0.4rem;
    border-radius: 0.25rem;
    font-family: ui-monospace, monospace;
    font-size: 0.9em;
  }

  .post-content :global(pre) {
    background-color: var(--color-surface-dim);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    font-family: ui-monospace, monospace;
    font-size: 0.9em;
    margin: 1rem 0;
  }

  .post-content :global(.spoiler) {
    background-color: var(--color-text-base);
    color: transparent;
    border-radius: 2px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .post-content :global(.spoiler:hover),
  .post-content :global(.spoiler.revealed) {
    background-color: transparent;
    color: inherit;
  }

  /* Badges */
  .badge-thread {
    background: #0088cc20;
    color: #0088cc;
  }
  .badge-fwd {
    background: #8b5cf620;
    color: #8b5cf6;
  }
  .badge-edit {
    background: #f59e0b20;
    color: #f59e0b;
  }

  /* RTL Support for Poll bars */
  [dir="rtl"] .poll-option-bar {
    left: auto;
    right: 0;
  }
</style>
