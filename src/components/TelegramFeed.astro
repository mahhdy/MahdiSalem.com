---
/**
 * TelegramFeed Component - Enhanced with media support
 */

import { t } from "../i18n";
import type { Locale } from "../i18n";

interface Props {
  lang: Locale;
  limit?: number;
}

const { lang, limit = 5 } = Astro.props;

const workerUrl =
  import.meta.env.PUBLIC_TELEGRAM_WORKER_URL ||
  "https://telegram-feed.mahhdy.workers.dev";
const channelUsername = import.meta.env.PUBLIC_TELEGRAM_CHANNEL || "@mahhdy57";
---

<div
  class="telegram-feed"
  data-worker-url={workerUrl}
  data-limit={limit}
  data-lang={lang}
  dir={lang === "fa" ? "rtl" : "ltr"}
>
  <div class="feed-header flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold flex items-center gap-3">
      <svg
        class="w-7 h-7 text-[#0088cc]"
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"
        ></path>
      </svg>
      {t("telegram.latest_posts", lang)}
    </h2>
  </div>

  <!-- Loading State -->
  <div class="feed-loading">
    <div class="flex items-center justify-center py-12">
      <svg
        class="animate-spin h-8 w-8 text-primary dark:text-primary-light"
        fill="none"
        viewBox="0 0 24 24"
      >
        <circle
          class="opacity-25"
          cx="12"
          cy="12"
          r="10"
          stroke="currentColor"
          stroke-width="4"></circle>
        <path
          class="opacity-75"
          fill="currentColor"
          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
        ></path>
      </svg>
      <p class="mr-3 text-text-muted dark:text-text-dark-muted">
        {t("telegram.loading", lang)}
      </p>
    </div>
  </div>

  <!-- Error State -->
  <div class="feed-error hidden">
    <div class="flex items-center justify-center py-12">
      <svg
        class="h-8 w-8 text-red-500 ml-3"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <p class="text-red-500">{t("telegram.error", lang)}</p>
    </div>
  </div>

  <!-- Posts Container -->
  <div class="feed-posts space-y-6">
    <!-- Posts will be injected here -->
  </div>

  <!-- View Channel Button -->
  {
    channelUsername && (
      <div class="text-center mt-8">
        <a
          href={`https://t.me/${channelUsername.replace("@", "")}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[#0088cc] text-white hover:bg-[#0077b3] transition-colors font-medium"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z" />
          </svg>
          {t("telegram.view_channel", lang)}
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            />
          </svg>
        </a>
      </div>
    )
  }
</div>

<script>
  interface TelegramPost {
    id: string;
    text: string;
    textHtml?: string;
    date: number;
    views: number;
    link: string;
    media?: MediaItem[];
    hasMedia?: boolean;
    forwardedFrom?: { url: string; name: string };
    replyTo?: { url: string; author: string; text: string };
  }

  interface MediaItem {
    type:
      | "photo"
      | "video"
      | "audio"
      | "voice"
      | "document"
      | "sticker"
      | "linkPreview"
      | "roundvideo";
    url?: string;
    thumbnail?: string;
    title?: string;
    duration?: string;
    fileName?: string;
    fileSize?: string;
    description?: string;
    embedUrl?: string;
  }

  document.querySelectorAll(".telegram-feed").forEach(async (container) => {
    const workerUrl = container.getAttribute("data-worker-url");
    const limit = parseInt(container.getAttribute("data-limit") || "5");
    const lang = container.getAttribute("data-lang") as "fa" | "en";

    const loadingEl = container.querySelector(".feed-loading") as HTMLElement;
    const errorEl = container.querySelector(".feed-error") as HTMLElement;
    const postsEl = container.querySelector(".feed-posts") as HTMLElement;

    if (!workerUrl) {
      loadingEl.classList.add("hidden");
      errorEl.classList.remove("hidden");
      return;
    }

    try {
      const response = await fetch(workerUrl);

      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }

      const posts: TelegramPost[] = await response.json();

      loadingEl.classList.add("hidden");

      if (!Array.isArray(posts) || posts.length === 0) {
        errorEl.classList.remove("hidden");
        errorEl.querySelector("p")!.textContent =
          lang === "fa" ? "پستی یافت نشد" : "No posts found";
        return;
      }

      posts.slice(0, limit).forEach((post) => {
        const postCard = createPostCard(post, lang);
        postsEl.appendChild(postCard);
      });
    } catch (error) {
      console.error("Telegram feed error:", error);
      loadingEl.classList.add("hidden");
      errorEl.classList.remove("hidden");
    }
  });

  function createPostCard(post: TelegramPost, lang: "fa" | "en"): HTMLElement {
    const card = document.createElement("article");
    card.className =
      "post-card p-5 rounded-lg bg-surface dark:bg-surface-dark border border-border dark:border-border-dark hover:border-primary dark:hover:border-primary-light transition-all hover:shadow-md";
    card.setAttribute("dir", lang === "fa" ? "rtl" : "ltr");

    // Format date
    const date = new Date(post.date * 1000);
    const formattedDate = new Intl.DateTimeFormat(
      lang === "fa" ? "fa-IR" : "en-US",
      {
        year: "numeric",
        month: "short",
        day: "numeric",
        hour: "2-digit",
        minute: "2-digit",
      },
    ).format(date);

    // Format views
    const formattedViews = post.views.toLocaleString(
      lang === "fa" ? "fa-IR" : "en-US",
    );

    // Build card HTML
    let html = "";

    // Forwarded from
    if (post.forwardedFrom) {
      html += `
        <div class="forwarded-from text-xs text-text-muted dark:text-text-dark-muted mb-2 flex items-center gap-1">
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
          </svg>
          ${lang === "fa" ? "فوروارد از" : "Forwarded from"}
          <a href="${post.forwardedFrom.url}" target="_blank" class="text-primary hover:underline">${post.forwardedFrom.name}</a>
        </div>
      `;
    }

    // Reply to
    if (post.replyTo) {
      html += `
        <div class="reply-to text-xs bg-surface-dim dark:bg-surface-dark-dim p-2 rounded mb-3 border-r-2 border-primary">
          <a href="${post.replyTo.url}" target="_blank" class="font-medium text-primary">${post.replyTo.author}</a>
          <p class="text-text-muted dark:text-text-dark-muted truncate">${post.replyTo.text}</p>
        </div>
      `;
    }

    // Meta info
    html += `
      <div class="post-meta text-sm text-text-muted dark:text-text-dark-muted mb-3 flex items-center gap-3 flex-wrap">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          ${formattedDate}
        </span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          ${formattedViews} ${lang === "fa" ? "بازدید" : "views"}
        </span>
      </div>
    `;

    // Media
    if (post.media && post.media.length > 0) {
      html += '<div class="post-media mb-4 space-y-3">';

      for (const media of post.media) {
        html += renderMedia(media, post.link, lang);
      }

      html += "</div>";
    }

    // Text content
    if (post.textHtml || post.text) {
      // Prioritize HTML but ensure line breaks are preserved
      let textContent = post.textHtml || escapeAndFormat(post.text);
      // Some workers might send \n in textHtml, convert to <br/> for display
      textContent = textContent.replace(/\n/g, "<br />");
      html += `<div class="post-text mb-4 text-text-base dark:text-text-dark leading-relaxed whitespace-pre-wrap">${textContent}</div>`;
    }

    // Read more link
    html += `
      <a href="${post.link}" target="_blank" rel="noopener noreferrer"
         class="read-more text-primary dark:text-primary-light hover:underline text-sm font-medium inline-flex items-center gap-1">
        ${lang === "fa" ? "مشاهده در تلگرام" : "View on Telegram"}
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${lang === "fa" ? "M15 19l-7-7 7-7" : "M9 5l7 7-7 7"}" />
        </svg>
      </a>
    `;

    card.innerHTML = html;
    return card;
  }

  function renderMedia(
    media: MediaItem,
    postLink: string,
    lang: "fa" | "en",
  ): string {
    switch (media.type) {
      case "photo":
        return `
          <a href="${postLink}" target="_blank" class="block">
            <img src="${media.url || media.thumbnail}" alt="" 
                 class="rounded-lg max-h-80 w-auto object-cover" loading="lazy" />
          </a>
        `;

      case "video":
        if (media.url) {
          return `
            <video controls class="rounded-lg max-h-80 w-full" poster="${media.thumbnail || ""}">
              <source src="${media.url}" type="video/mp4" />
            </video>
          `;
        }
        return `
          <a href="${media.embedUrl || postLink}" target="_blank" class="block relative">
            <img src="${media.thumbnail}" alt="" class="rounded-lg max-h-80 w-auto object-cover" loading="lazy" />
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="bg-black/50 rounded-full p-4">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </div>
            ${media.duration ? `<span class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded">${media.duration}</span>` : ""}
          </a>
        `;

      case "audio":
        return `
          <div class="audio-preview flex items-center gap-3 p-3 bg-surface-dim dark:bg-surface-dark-dim rounded-lg">
            <div class="w-12 h-12 bg-primary/20 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-medium truncate">${media.title || (lang === "fa" ? "فایل صوتی" : "Audio")}</p>
              <p class="text-sm text-text-muted">${media.duration || ""}</p>
            </div>
            <a href="${postLink}" target="_blank" class="text-primary hover:underline text-sm">
              ${lang === "fa" ? "دانلود" : "Download"}
            </a>
          </div>
        `;

      case "voice":
        return `
          <div class="voice-message flex items-center gap-3 p-3 bg-surface-dim dark:bg-surface-dark-dim rounded-lg">
            <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 14c1.66 0 3-1.34 3-3V5c0-1.66-1.34-3-3-3S9 3.34 9 5v6c0 1.66 1.34 3 3 3zm5.91-3c-.49 0-.9.36-.98.85C16.52 14.2 14.47 16 12 16s-4.52-1.8-4.93-4.15c-.08-.49-.49-.85-.98-.85-.61 0-1.09.54-1 1.14.49 3 2.89 5.35 5.91 5.78V20c0 .55.45 1 1 1s1-.45 1-1v-2.08c3.02-.43 5.42-2.78 5.91-5.78.1-.6-.39-1.14-1-1.14z"/>
              </svg>
            </div>
            <div class="flex-1">
              <div class="h-1 bg-text-muted/30 rounded-full"></div>
            </div>
            <span class="text-sm text-text-muted">${media.duration || ""}</span>
          </div>
        `;

      case "document":
        return `
          <a href="${postLink}" target="_blank" class="document-preview flex items-center gap-3 p-3 bg-surface-dim dark:bg-surface-dark-dim rounded-lg hover:bg-surface-dim/80 transition-colors">
            <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-medium truncate">${media.fileName || (lang === "fa" ? "فایل" : "File")}</p>
              <p class="text-sm text-text-muted">${media.fileSize || ""}</p>
            </div>
            <svg class="w-5 h-5 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
          </a>
        `;

      case "linkPreview":
        return `
          <a href="${media.url}" target="_blank" rel="noopener noreferrer" 
             class="link-preview flex gap-3 p-3 bg-surface-dim dark:bg-surface-dark-dim rounded-lg hover:bg-surface-dim/80 transition-colors border border-border dark:border-border-dark">
            ${media.thumbnail ? `<img src="${media.thumbnail}" alt="" class="w-16 h-16 rounded object-cover" />` : ""}
            <div class="flex-1 min-w-0">
              <p class="font-medium text-primary truncate">${media.title || ""}</p>
              <p class="text-sm text-text-muted line-clamp-2">${media.description || ""}</p>
            </div>
          </a>
        `;

      case "sticker":
        return `
          <img src="${media.url}" alt="Sticker" class="w-32 h-32 object-contain" loading="lazy" />
        `;

      default:
        return "";
    }
  }

  function escapeAndFormat(text: string): string {
    return text
      .replace(/&/g, "&amp;")
      .replace(/</g, "&lt;")
      .replace(/>/g, "&gt;")
      .replace(/\n/g, "<br />");
  }
</script>

<style>
  .telegram-feed {
    background-color: var(--color-surface-dim);
    border-radius: 0.75rem;
    padding: 2rem;
    border: 1px solid var(--color-border);
  }

  html.dark .telegram-feed {
    background-color: var(--color-surface-dark-dim);
    border-color: var(--color-border-dark);
  }

  .post-text {
    max-height: 600px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 20;
    -webkit-box-orient: vertical;
  }

  .post-text a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .post-text .hashtag {
    color: var(--color-primary);
    font-weight: 500;
  }

  .post-text .mention {
    color: var(--color-primary);
  }

  .post-text .spoiler {
    background-color: currentColor;
    border-radius: 2px;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .post-text .spoiler:hover,
  .post-text .spoiler.revealed {
    background-color: transparent;
  }

  .post-text code {
    background-color: var(--color-surface-dim);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-family: monospace;
    font-size: 0.9em;
  }

  .post-text pre {
    background-color: var(--color-surface-dim);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    font-family: monospace;
    font-size: 0.9em;
  }

  .post-text blockquote {
    border-right: 3px solid var(--color-primary);
    padding-right: 1rem;
    margin: 0.5rem 0;
    color: var(--color-text-muted);
  }

  html[dir="ltr"] .post-text blockquote {
    border-right: none;
    border-left: 3px solid var(--color-primary);
    padding-right: 0;
    padding-left: 1rem;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
