---
/**
 * PDFViewer Component (Stable Native Version)
 *
 * This version uses the browser's native PDF engine via iframe
 * for maximum rendering quality (especially Farsi fonts)
 * while maintaining integrated width controls and premium UI.
 *
 * - Desktop: Forces browser-native rendering (prevents IDM/download-manager interception)
 * - Mobile: Shows a native-friendly open button instead of the iframe
 */
import { t } from '../i18n';

interface Props {
  pdfUrl: string;
  title: string;
  lang: 'fa' | 'en';
}

const { pdfUrl, title, lang } = Astro.props;

// Labels from i18n
const labels = {
  download: t('books.download_pdf', lang),
  fullscreen: t('books.pdf_fullscreen', lang),
  zoom: t('books.pdf_zoom', lang),
  openInBrowser: lang === 'fa' ? 'باز کردن در مرورگر' : 'Open in Browser',
  mobileHint: lang === 'fa'
    ? 'برای مشاهده بهتر روی گوشی، PDF را در مرورگر یا اپلیکیشن PDF خود باز کنید.'
    : 'For the best experience on mobile, open the PDF in your browser or PDF app.',
  openPdf: lang === 'fa' ? 'باز کردن PDF' : 'Open PDF',
};
---

<div
  class="pdf-viewer-root flex flex-col bg-surface-dim dark:bg-surface-dark-dim rounded-2xl border border-border dark:border-border-dark overflow-hidden transition-all duration-300 shadow-xl mx-auto w-full"
  id="pdf-root"
>
  <!-- Top Toolbar -->
  <div class="pdf-toolbar z-20 flex flex-wrap items-center justify-between gap-3 p-3 bg-white/95 dark:bg-[#0a1117]/95 backdrop-blur-md border-b border-border dark:border-border-dark">

    <!-- Left: Info -->
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 rounded-lg bg-primary/10 dark:bg-primary-light/10 flex items-center justify-center text-primary dark:text-primary-light">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
        </svg>
      </div>
      <span class="text-sm font-bold truncate max-w-[150px] sm:max-w-xs md:max-w-md text-text-base dark:text-text-dark opacity-80">{title}</span>
    </div>

    <!-- Right: Width Selection & Actions -->
    <div class="flex items-center gap-2 sm:gap-4">
      <!-- Width Toggles (Synchronized with Global WidthToggle) -->
      <div class="hidden md:flex items-center bg-surface-dim dark:bg-surface-dark-dim rounded-xl p-1 border border-border dark:border-border-dark" role="group">
        {[
          { key: 'default', label: 'S', title: 'Normal' },
          { key: '1024', label: 'M', title: 'Medium' },
          { key: '1280', label: 'L', title: 'Large' },
          { key: 'full', label: 'XL', title: 'Full' }
        ].map((item) => (
          <button
            class="pdf-width-btn w-8 h-8 rounded-lg text-[10px] font-black uppercase hover:bg-primary/10 dark:hover:bg-primary-light/10 text-text-muted dark:text-text-dark-muted hover:text-primary dark:hover:text-primary-light transition-all"
            data-width-key={item.key}
            title={item.title}
          >
            {item.label}
          </button>
        ))}
      </div>

      <div class="flex items-center gap-1">
        <!-- Open in Browser button (desktop only - avoids IDM interception) -->
        <button
          id="pdf-open-browser-btn"
          class="hidden md:flex p-2 rounded-xl bg-surface-dim dark:bg-surface-dark-dim border border-border dark:border-border-dark hover:bg-primary/10 dark:hover:bg-primary-light/10 text-text-muted dark:text-text-dark-muted hover:text-primary dark:hover:text-primary-light transition-all items-center gap-2 px-3 text-xs font-bold"
          title={labels.openInBrowser}
          data-pdf-url={pdfUrl}
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <span class="hidden lg:inline">{labels.openInBrowser}</span>
        </button>

        <a
          href={pdfUrl}
          download={title}
          class="p-2 rounded-xl bg-primary text-white dark:bg-primary-light hover:shadow-lg hover:shadow-primary/20 transition-all flex items-center gap-2 px-4 text-xs font-bold no-underline"
          title={labels.download}
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span class="hidden xs:inline">{labels.download}</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Desktop: iframe PDF viewer -->
  <div class="pdf-desktop-view pdf-viewport-container relative bg-white dark:bg-black w-full" style="height: calc(100vh - 120px); min-height: 800px; display: block;">
    <iframe
      src={`${pdfUrl}#view=FitH&toolbar=1`}
      class="block w-full h-full"
      style="width: 100%; height: 100%; border: none; min-height: 800px;"
      title={title}
      loading="lazy"
    ></iframe>
  </div>

  <!-- Mobile: friendly open-in-browser card (shown instead of iframe on mobile) -->
  <div class="pdf-mobile-view hidden flex-col items-center justify-center py-16 px-6 text-center gap-6 bg-surface-dim dark:bg-surface-dark-dim">
    <!-- PDF icon illustration -->
    <div class="w-20 h-20 rounded-2xl bg-primary/10 dark:bg-primary-light/10 flex items-center justify-center">
      <svg class="w-10 h-10 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
      </svg>
    </div>

    <div>
      <h3 class="text-lg font-bold text-text-base dark:text-text-dark mb-2">{title}</h3>
      <p class="text-sm text-text-muted dark:text-text-dark-muted max-w-sm">{labels.mobileHint}</p>
    </div>

    <div class="flex flex-col sm:flex-row gap-3 w-full max-w-xs">
      <!-- Open in browser tab (native PDF app on iOS/Android) -->
      <a
        href={pdfUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-2 px-6 py-3 rounded-xl bg-primary text-white font-semibold text-sm hover:bg-primary-dark transition-all no-underline shadow-lg shadow-primary/20"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
        {labels.openPdf}
      </a>
      <!-- Download -->
      <a
        href={pdfUrl}
        download={title}
        class="flex items-center justify-center gap-2 px-6 py-3 rounded-xl border-2 border-primary text-primary dark:border-primary-light dark:text-primary-light font-semibold text-sm hover:bg-primary/5 transition-all no-underline"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        {labels.download}
      </a>
    </div>
  </div>

  <!-- Footer Info -->
  <div class="pdf-footer px-4 py-1.5 flex items-center justify-between text-[10px] font-black uppercase tracking-tighter opacity-40 border-t border-border dark:border-border-dark bg-white/50 dark:bg-black/50">
     <span class="truncate pr-4">{title}</span>
     <span class="flex items-center gap-1.5 whitespace-nowrap pdf-footer-status">
       <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
       High Fidelity Browser Native Engine
     </span>
  </div>
</div>

<style is:global>
  .pdf-width-btn.active {
    background-color: var(--color-primary);
    color: white !important;
  }
  html.dark .pdf-width-btn.active {
    background-color: var(--color-primary-light);
    color: var(--color-surface-dark) !important;
  }

  /* Farsi RTL fixes for header */
  [data-lang="fa"] .pdf-toolbar {
    direction: rtl;
  }

  @media (max-width: 768px) {
    .pdf-viewer-root {
      border-radius: 0.5rem;
    }
    /* On mobile hide desktop iframe, show mobile card */
    .pdf-desktop-view {
      display: none !important;
    }
    .pdf-mobile-view {
      display: flex !important;
    }
    .pdf-footer-status {
      display: none;
    }
  }
</style>

<script>
  // ─── Open in Browser (bypasses IDM/download-managers on desktop) ───────────
  // Uses blob URL trick: fetches the PDF, creates a blob URL, opens in new tab.
  // The browser treats blob: URLs as internal and renders them natively.
  function initOpenInBrowser() {
    const btn = document.getElementById('pdf-open-browser-btn') as HTMLButtonElement | null;
    if (!btn) return;

    btn.addEventListener('click', async () => {
      const pdfUrl = btn.dataset.pdfUrl;
      if (!pdfUrl) return;

      btn.disabled = true;
      const originalContent = btn.innerHTML;
      btn.innerHTML = `<svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path></svg>`;

      try {
        const response = await fetch(pdfUrl, { headers: { 'Accept': 'application/pdf' } });
        const blob = await response.blob();
        const blobUrl = URL.createObjectURL(new Blob([blob], { type: 'application/pdf' }));
        const win = window.open(blobUrl, '_blank');
        // Clean up blob URL after a delay
        if (win) {
          setTimeout(() => URL.revokeObjectURL(blobUrl), 30000);
        } else {
          // Popup blocked fallback - direct open
          window.open(pdfUrl + '#toolbar=1&view=FitH', '_blank');
        }
      } catch {
        // Fallback: open with hash that hints browser inline rendering
        window.open(pdfUrl + '#toolbar=1&view=FitH', '_blank');
      } finally {
        btn.disabled = false;
        btn.innerHTML = originalContent;
      }
    });
  }

  // ─── Sync width buttons with global <html>[data-content-width] ─────────────
  function initPdfSync() {
    const root = document.getElementById('pdf-root');
    if (!root) return;

    function upgradeUI(key: string) {
       root?.querySelectorAll('.pdf-width-btn').forEach(b => {
         if ((b as HTMLElement).dataset.widthKey === key) b.classList.add('active');
         else b.classList.remove('active');
       });
    }

    // Handle clicks
    root.querySelectorAll('.pdf-width-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const key = (btn as HTMLElement).dataset.widthKey!;
        document.documentElement.setAttribute('data-content-width', key);
        localStorage.setItem('content-width', key);
        window.dispatchEvent(new Event('resize'));
        upgradeUI(key);
      });
    });

    // Initial state
    const current = document.documentElement.getAttribute('data-content-width') || 'default';
    upgradeUI(current);

    // Observer for global changes
    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.type === 'attributes' && mutation.attributeName === 'data-content-width') {
           const val = document.documentElement.getAttribute('data-content-width') || 'default';
           upgradeUI(val);
        }
      });
    });
    observer.observe(document.documentElement, { attributes: true });
  }

  function init() {
    initPdfSync();
    initOpenInBrowser();
  }

  document.addEventListener('DOMContentLoaded', init);
  document.addEventListener('astro:after-swap', init);
  document.addEventListener('astro:page-load', init);
</script>
