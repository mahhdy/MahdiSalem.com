---
import { t, type Locale } from '../i18n';

interface Props {
  title: string;
  url: string;
  lang: Locale;
}

const { title, url, lang } = Astro.props;
const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);
---

<div class="flex items-center gap-3">
  <span class="text-sm text-text-muted dark:text-text-dark-muted">{t('articles.share', lang)}:</span>

  <!-- Twitter/X -->
  <a
    href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="p-2 rounded-lg hover:bg-surface-dim dark:hover:bg-surface-dark-dim transition-colors text-text-muted dark:text-text-dark-muted hover:text-primary dark:hover:text-primary-light no-underline"
    aria-label="Share on Twitter"
  >
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
  </a>

  <!-- Telegram -->
  <a
    href={`https://t.me/share/url?url=${encodedUrl}&text=${encodedTitle}`}
    target="_blank"
    rel="noopener noreferrer"
    class="p-2 rounded-lg hover:bg-surface-dim dark:hover:bg-surface-dark-dim transition-colors text-text-muted dark:text-text-dark-muted hover:text-primary dark:hover:text-primary-light no-underline"
    aria-label="Share on Telegram"
  >
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.96 6.504-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.479.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/></svg>
  </a>

  <!-- Copy link -->
  <button
    class="p-2 rounded-lg hover:bg-surface-dim dark:hover:bg-surface-dark-dim transition-colors text-text-muted dark:text-text-dark-muted hover:text-primary dark:hover:text-primary-light"
    aria-label="Copy link"
    data-copy-url={url}
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/></svg>
  </button>
</div>

<script>
  document.querySelectorAll('[data-copy-url]').forEach((btn) => {
    btn.addEventListener('click', () => {
      const url = btn.getAttribute('data-copy-url');
      if (url) navigator.clipboard.writeText(url);
    });
  });
</script>
