---
import { t, type Locale } from '../i18n';
 
interface Props {
  lang: Locale;
  content: string;
}
 
const { lang, content } = Astro.props;
 
// Calculate reading time (average reading speed ~200 words/min for Persian, ~250 for English)
const wordsPerMinute = lang === 'fa' ? 200 : 250;
const words = content.trim().split(/\s+/).length;
const minutes = Math.max(1, Math.round(words / wordsPerMinute));
---
 
<span class="inline-flex items-center gap-1 text-sm text-text-muted dark:text-text-dark-muted">
  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
  </svg>
  <span>{minutes} {t('reading_time.minutes', lang)}</span>
</span>