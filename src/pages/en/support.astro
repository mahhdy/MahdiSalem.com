---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DonateButton from '../../components/DonateButton.astro';
import { t } from '../../i18n';

const lang = 'en';
---

<BaseLayout title={t('nav.support', lang)}>
  <div class="container-narrow py-16">
    <h1 class="text-3xl md:text-4xl font-bold mb-4">{t('support.title', lang)}</h1>
    <p class="text-lg text-text-muted dark:text-text-dark-muted mb-8">{t('support.description', lang)}</p>

    <div class="space-y-8">
      <div class="p-6 rounded-xl border border-border dark:border-border-dark">
        <h2 class="text-xl font-bold mb-3">Ko-fi</h2>
        <p class="text-text-muted dark:text-text-dark-muted mb-4">Support through Ko-fi with one-time or monthly contributions.</p>
        <DonateButton lang={lang} />
      </div>

      <div class="p-6 rounded-xl border border-border dark:border-border-dark">
        <h2 class="text-xl font-bold mb-3">Other Ways to Support</h2>
        <ul class="space-y-3 text-text-muted dark:text-text-dark-muted">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 shrink-0 mt-0.5 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/></svg>
            <span>Share articles with friends and on social media</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 shrink-0 mt-0.5 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
            <span>Contribute to the wiki and suggest edits</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 shrink-0 mt-0.5 text-primary dark:text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            <span>Subscribe to the newsletter</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>
