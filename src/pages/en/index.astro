---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Newsletter from '../../components/Newsletter.astro';
import TelegramFeed from '../../components/TelegramFeed.astro';
import { t, stripLangPrefix } from '../../i18n';
import { getCollection } from 'astro:content';

const lang = 'en';

const allArticles = await getCollection('articles', ({ data }) => data.lang === 'en' && !data.draft);
const latestArticles = allArticles
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 3);

const allBooks = await getCollection('books', ({ data }) => data.lang === 'en' && !data.draft && !data.bookSlug);
const books = allBooks.sort((a, b) => a.data.order - b.data.order);

const dateFormatter = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout>
  <section class="relative overflow-hidden">
    <div class="container-wide py-20 md:py-32">
      <div class="max-w-2xl">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 text-primary dark:text-primary-light">
          {t('hero.greeting', lang)}
        </h1>
        <p class="text-xl md:text-2xl text-text-muted dark:text-text-dark-muted mb-4">
          {t('hero.subtitle', lang)}
        </p>
        <p class="text-lg text-text-muted dark:text-text-dark-muted mb-8 leading-relaxed">
          {t('hero.description', lang)}
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/en/books" class="inline-flex items-center px-6 py-3 rounded-lg bg-primary text-white font-medium hover:bg-primary-dark transition-colors no-underline">
            {t('hero.cta.books', lang)}
          </a>
          <a href="/en/articles" class="inline-flex items-center px-6 py-3 rounded-lg border-2 border-primary text-primary dark:border-primary-light dark:text-primary-light font-medium hover:bg-primary/5 transition-colors no-underline">
            {t('hero.cta.articles', lang)}
          </a>
        </div>
      </div>
    </div>
    <div class="absolute top-0 end-0 w-1/3 h-full opacity-5 dark:opacity-[0.02]" aria-hidden="true">
      <svg viewBox="0 0 200 200" class="w-full h-full"><defs><pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse"><path d="M 20 0 L 0 0 0 20" fill="none" stroke="currentColor" stroke-width="0.5" /></pattern></defs><rect width="200" height="200" fill="url(#grid)" /></svg>
    </div>
  </section>

  {books.length > 0 && (
    <section class="container-wide py-16">
      <h2 class="text-2xl md:text-3xl font-bold mb-8">{t('home.featured', lang)}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {books.map((book) => (
          <a href={`/en/books/${stripLangPrefix(book.id)}`} class="group block p-6 rounded-xl border border-border dark:border-border-dark hover:border-primary dark:hover:border-primary-light transition-colors no-underline">
            {book.data.coverImage && <img src={book.data.coverImage} alt={book.data.title} class="w-full h-48 object-cover rounded-lg mb-4" loading="lazy" />}
            <h3 class="text-lg font-bold mb-2 text-text-base dark:text-text-dark group-hover:text-primary dark:group-hover:text-primary-light transition-colors">{book.data.title}</h3>
            <p class="text-sm text-text-muted dark:text-text-dark-muted line-clamp-2">{book.data.description}</p>
          </a>
        ))}
      </div>
    </section>
  )}

  {latestArticles.length > 0 && (
    <section class="container-wide py-16">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl md:text-3xl font-bold">{t('home.latest', lang)}</h2>
        <a href="/en/articles" class="text-sm text-primary dark:text-primary-light no-underline hover:underline">{t('articles.read_more', lang)} &rarr;</a>
      </div>
      <div class="space-y-6">
        {latestArticles.map((article) => (
          <a href={`/en/articles/${stripLangPrefix(article.id)}`} class="group block p-6 rounded-xl border border-border dark:border-border-dark hover:border-primary dark:hover:border-primary-light transition-colors no-underline">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 mb-2">
              <h3 class="text-lg font-bold text-text-base dark:text-text-dark group-hover:text-primary dark:group-hover:text-primary-light transition-colors">{article.data.title}</h3>
              <time datetime={article.data.publishDate.toISOString()} class="text-sm text-text-muted dark:text-text-dark-muted shrink-0">{dateFormatter.format(article.data.publishDate)}</time>
            </div>
            <p class="text-sm text-text-muted dark:text-text-dark-muted line-clamp-2">{article.data.description}</p>
          </a>
        ))}
      </div>
    </section>
  )}

  <!-- Telegram Feed Section -->
  <section class="container-wide py-12">
    <TelegramFeed lang={lang} limit={5} />
  </section>

  <section class="container-narrow py-16">
    <Newsletter lang={lang} />
  </section>
</BaseLayout>
