---

<BaseLayout
    title={t("social.title", lang)}
    description={t("social.description", lang)}
    lang={lang}
>
    <div class="container-wide py-12" dir={dir}>
        <div class="mb-10 text-center">
            <h1 class="text-3xl md:text-4xl font-bold mb-3">
                {t("social.title", lang)}
            </h1>
            <p
                class="text-text-muted dark:text-text-dark-muted max-w-xl mx-auto text-lg"
            >
                {t("social.description", lang)}
            </p>
        </div>

        <!-- Platform tabs -->
        <div class="flex flex-wrap justify-center gap-3 mb-10" role="tablist">
            {
                visibleTabs.map((p, i) => (
                    <button
                        role="tab"
                        aria-selected={i === 0 ? "true" : "false"}
                        aria-controls={`tab-panel-${p.id}`}
                        id={`tab-${p.id}`}
                        class="social-tab flex items-center gap-2 px-5 py-2.5 rounded-full border text-sm font-semibold transition-all bg-surface dark:bg-surface-dark border-border dark:border-border-dark text-text-muted dark:text-text-dark-muted hover:border-primary dark:hover:border-primary-light"
                        data-platform={p.id}
                        data-color={p.color}
                    >
                        <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path d={ICONS[p.id] || ""} />
                        </svg>
                        {p.label}
                    </button>
                ))
            }
        </div>

        <!-- Tab panels -->
        {
            visibleTabs.map((p, i) => (
                <div
                    role="tabpanel"
                    id={`tab-panel-${p.id}`}
                    class={`social-panel${i !== 0 ? " hidden" : ""}`}
                    data-platform={p.id}
                >
                    {p.id === "telegram" && (
                        <TelegramFeed lang={lang} limit={20} />
                    )}
                    {p.id === "instagram" && <InstagramFeed lang={lang} />}
                    {p.id === "x" && <XFeed lang={lang} />}
                    {p.id === "linkedin" && <LinkedInFeed lang={lang} />}
                    {p.id !== "telegram" &&
                        p.id !== "instagram" &&
                        p.id !== "x" &&
                        p.id !== "linkedin" && (
                            <div class="text-center py-20 text-text-muted dark:text-text-dark-muted">
                                <svg
                                    class="w-16 h-16 mx-auto mb-4 opacity-30"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path d={ICONS[p.id] || ""} />
                                </svg>
                                <p class="text-lg mb-3">
                                    {t("social.coming_soon", lang)} ({p.label})
                                </p>
                                {p.handle && (
                                    <a
                                        href={
                                            p.id === "instagram"
                                                ? `https://instagram.com/${p.handle}`
                                                : p.id === "facebook"
                                                  ? `https://facebook.com/${p.handle}`
                                                  : p.id === "x"
                                                    ? `https://x.com/${p.handle}`
                                                    : p.id === "linkedin"
                                                      ? `https://linkedin.com/in/${p.handle}`
                                                      : "#"
                                        }
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="text-primary dark:text-primary-light hover:underline text-sm"
                                    >
                                        View on {p.label} â†—
                                    </a>
                                )}
                            </div>
                        )}
                </div>
            ))
        }
    </div>
</BaseLayout>

<script>
    function initSocialTabs() {
        const tabs =
            document.querySelectorAll<HTMLButtonElement>(".social-tab");
        const panels = document.querySelectorAll<HTMLElement>(".social-panel");

        function activateTab(platform: string) {
            tabs.forEach((t) => {
                const isActive = t.dataset.platform === platform;
                t.setAttribute("aria-selected", String(isActive));
                if (isActive) {
                    const color = t.dataset.color || "";
                    t.style.backgroundColor = color;
                    t.style.borderColor = color;
                    t.style.color = "white";
                } else {
                    t.style.backgroundColor = "";
                    t.style.borderColor = "";
                    t.style.color = "";
                }
            });
            panels.forEach((p) =>
                p.classList.toggle("hidden", p.dataset.platform !== platform),
            );
        }

        // Activate first tab by default
        if (tabs.length > 0) activateTab(tabs[0].dataset.platform!);

        tabs.forEach((tab) => {
            tab.addEventListener("click", () =>
                activateTab(tab.dataset.platform!),
            );
        });
    }

    document.addEventListener("DOMContentLoaded", initSocialTabs);
    document.addEventListener("astro:after-swap", initSocialTabs);
    document.addEventListener("astro:page-load", initSocialTabs);
</script>
