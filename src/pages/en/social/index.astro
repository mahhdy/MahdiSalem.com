import BaseLayout from "../../../layouts/BaseLayout.astro";
import TelegramFeed from "../../../components/TelegramFeed.astro";
import InstagramFeed from "../../../components/InstagramFeed.astro";
import XFeed from "../../../components/XFeed.astro";
import LinkedInFeed from "../../../components/LinkedInFeed.astro";
import { siteConfig } from "../../../config/site";
import { t } from "../../../i18n";

const lang = "en";
const dir = "ltr";
const { social } = siteConfig;

const allPlatforms = [
    {
        id: "telegram",
        label: "Telegram",
        handle: social.telegram,
        color: "#0088cc",
    },
    { id: "x", label: "X (Twitter)", handle: social.x, color: "#000000" },
    {
        id: "instagram",
        label: "Instagram",
        handle: social.instagram,
        color: "#E4405F",
    },
    {
        id: "facebook",
        label: "Facebook",
        handle: social.facebook,
        color: "#1877F2",
    },
    {
        id: "linkedin",
        label: "LinkedIn",
        handle: social.linkedin,
        color: "#0A66C2",
    },
];

const tabs = allPlatforms.filter((p) => p.handle && p.handle.trim() !== "");
const visibleTabs = tabs.length > 0 ? tabs : [allPlatforms[0]];

