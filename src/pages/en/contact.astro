---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { t } from '../../i18n';

const lang = 'en';
---

<BaseLayout title={t('nav.contact', lang)}>
  <div class="container-narrow py-16">
    <h1 class="text-3xl md:text-4xl font-bold mb-8">{t('contact.title', lang)}</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-4">
          <div>
            <label for="name" class="block text-sm font-medium mb-1">{t('contact.name', lang)}</label>
            <input type="text" id="name" name="name" required class="w-full px-4 py-2.5 rounded-lg border border-border dark:border-border-dark bg-surface dark:bg-surface-dark text-text-base dark:text-text-dark focus:outline-none focus:ring-2 focus:ring-primary" />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium mb-1">{t('contact.email', lang)}</label>
            <input type="email" id="email" name="email" required class="w-full px-4 py-2.5 rounded-lg border border-border dark:border-border-dark bg-surface dark:bg-surface-dark text-text-base dark:text-text-dark focus:outline-none focus:ring-2 focus:ring-primary" />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium mb-1">{t('contact.message', lang)}</label>
            <textarea id="message" name="message" rows="5" required class="w-full px-4 py-2.5 rounded-lg border border-border dark:border-border-dark bg-surface dark:bg-surface-dark text-text-base dark:text-text-dark focus:outline-none focus:ring-2 focus:ring-primary resize-y"></textarea>
          </div>
          <button type="submit" class="px-6 py-2.5 rounded-lg bg-primary text-white font-medium hover:bg-primary-dark transition-colors">{t('contact.send', lang)}</button>
        </form>
      </div>

      <div>
        <h2 class="text-xl font-bold mb-4">Social Media</h2>
        <div class="space-y-3">
          <a href="https://t.me/mehdisalem" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 p-3 rounded-lg border border-border dark:border-border-dark hover:border-primary dark:hover:border-primary-light transition-colors no-underline text-text-base dark:text-text-dark">
            <svg class="w-5 h-5 text-primary dark:text-primary-light" fill="currentColor" viewBox="0 0 24 24"><path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.96 6.504-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.479.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/></svg>
            <span>Telegram</span>
          </a>
          <a href="https://twitter.com/mehdisalem" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 p-3 rounded-lg border border-border dark:border-border-dark hover:border-primary dark:hover:border-primary-light transition-colors no-underline text-text-base dark:text-text-dark">
            <svg class="w-5 h-5 text-primary dark:text-primary-light" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            <span>X (Twitter)</span>
          </a>
        </div>
        <div class="mt-6">
          <h2 class="text-xl font-bold mb-2">Email</h2>
          <p class="text-text-muted dark:text-text-dark-muted">contact@mahdisalem.com</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
