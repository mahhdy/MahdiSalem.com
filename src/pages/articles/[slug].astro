---
import ArticleLayout from '../../layouts/ArticleLayout.astro';
import { getCollection, render } from 'astro:content';

const lang = 'fa';

export async function getStaticPaths() {
  const articles = await getCollection('articles', ({ data }) => data.lang === 'fa');

  const toRouteSlug = (entry: { slug?: string; id?: string }) => {
    const raw = String(entry.slug ?? entry.id ?? '');
    const withoutLang = raw.replace(/^fa\//, '');
    const withoutExt = withoutLang.replace(/\.(md|mdx)$/, '');
    const segments = withoutExt.split('/').filter(Boolean);
    return segments.at(-1) ?? '';
  };

  return articles.flatMap((article) => {
    const slug = toRouteSlug(article);
    if (!slug) return [];

    return [{
      params: { slug },
      props: { article, slug },
    }];
  });
}

const { article, slug: routeSlug } = Astro.props;
const { Content, remarkPluginFrontmatter } = await render(article);
const slug = routeSlug ?? String(article.id ?? '').replace(/^fa\//, '').split('/').filter(Boolean).at(-1) ?? '';
---

<ArticleLayout
  title={article.data.title}
  description={article.data.description}
  lang={lang}
  publishDate={article.data.publishDate}
  updatedDate={article.data.updatedDate}
  author={article.data.author}
  categories={article.data.categories}
  tags={article.data.tags}
  coverImage={article.data.coverImage}
  rawContent={article.body ?? ''}
  slug={slug}
  draft={article.data.draft}
  showHeader={article.data['show-header']}
  pdfOnly={article.data.pdfOnly}
  pdfUrl={article.data.pdfUrl}
>
  <Content />
</ArticleLayout>
